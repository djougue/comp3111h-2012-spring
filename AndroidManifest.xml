<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ezmeal.main"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET"/>    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="13"/>

    <application
        android:name="UserApp"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar">
    
        <activity android:name=".WelcomeActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.ezmeal.main.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.ezmeal.activity.SettingsActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.ezmeal.activity.ShakeActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.ezmeal.activity.MyTasteActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.ezmeal.activity.QuitActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.ezmeal.activity.RegisterActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.ezmeal.activity.DetailActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.ezmeal.activity.ForgotPasswdActivity"
            android:label="@string/app_name" >
        </activity>   

        <activity
            android:name="com.ezmeal.uploadimage.ImageUpload"
            android:label="@string/app_name" >
        </activity>   
        
    </application>
</manifest>